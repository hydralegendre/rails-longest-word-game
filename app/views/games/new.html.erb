<h1>New Game</h1>

<!-- display a random grid -->
<!-- pour chaque td insérer une lettre aléatoire.
for each. -->

<div class="wrapper">
  <% @letters.each do |letter| %>
  <div class="case"><%= letter.capitalize %></div>
  <% end %>
</div>

<!-- display a form -->

<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type="text" name="word" placeholder="Type here">
  <input id="button" type="submit" value="Play">
</form>


